<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:paddingLeft="10sp"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/form_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        >

    <TextView

        android:id="@+id/prosHeading"
        android:text="Pros!"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <TextView

       android:layout_below="@+id/prosHeading"
       android:id="@+id/pros"
       android:text=""
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/pros"
        android:id="@+id/consHeading"
        android:text="Cons!"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/consHeading"
        android:id="@+id/cons"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/bodyheading"
        android:id="@+id/body"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@+id/cons"
        android:id="@+id/bodyheading"
        android:text="About Body"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <TextView
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@+id/body"
        android:id="@+id/safetyheading"
        android:text="About Safety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/safetyheading"
        android:id="@+id/safety"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@+id/safety"
        android:id="@+id/whatsnewheading"
        android:text="Whats New!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/whatsnewheading"
        android:id="@+id/whatsnew"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</RelativeLayout>
    </ScrollView>

</RelativeLayout>