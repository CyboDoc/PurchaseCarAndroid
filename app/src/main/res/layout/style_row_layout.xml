<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="300sp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/style_model_name_title"
            android:text="MODEL"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="16sp"

            android:layout_width="100sp"
            android:layout_height="80sp" />
        <TextView
            android:id="@+id/style_model_name"
            android:text="Model Name"
            android:gravity="center"
            android:layout_toRightOf="@+id/style_model_name_title"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="80sp" />
        <TextView
            android:id="@+id/style_name_title"
            android:text="STYLE"
            android:gravity="center"
            android:layout_below="@id/style_model_name"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="16sp"
            android:layout_width="100sp"
            android:layout_height="120sp" />
        <TextView
            android:id="@+id/style_name"
            android:text="Style Name"
            android:gravity="center"
            android:layout_toRightOf="@id/style_model_name_title"
            android:layout_below="@id/style_model_name"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="120sp" />
        <TextView
android:layout_below="@id/style_name"
            android:id="@+id/trim"
            android:text="TRIM"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="16sp"
            android:layout_width="100sp"
            android:layout_height="100sp" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="100sp"
               android:id="@+id/trim_content"
               android:layout_below="@id/style_name"
               android:layout_toRightOf="@id/trim"
               android:text="text content"
               android:background="@color/white"
               android:gravity="center"
               android:textSize="16sp"
               android:textColor="@color/colorPrimary"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>