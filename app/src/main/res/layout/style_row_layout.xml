<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/activity_vertical_margin"
    android:background="#7E57C2"
    android:layout_width="match_parent"
    android:layout_height="350sp">

    <RelativeLayout
        android:background="#6599ff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/white"
            android:id="@+id/no"/>
        <TextView
            android:layout_below="@+id/no"
            android:id="@+id/style_model_name_title"
            android:text="MODEL :"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="100sp"
            android:layout_height="80sp" />
        <TextView
            android:layout_below="@+id/no"
            android:id="@+id/style_model_name"
            android:text="Model Name"
            android:gravity="center"
            android:layout_toRightOf="@+id/style_model_name_title"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="80sp" />
        <TextView
            android:id="@+id/style_name_title"
            android:text="STYLE :"
            android:gravity="center"
            android:layout_below="@id/style_model_name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="100sp"
            android:layout_height="120sp" />
        <TextView
            android:id="@+id/style_name"
            android:text="Style Name"
            android:gravity="center"
            android:layout_toRightOf="@id/style_model_name_title"
            android:layout_below="@id/style_model_name"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="120sp" />
        <TextView
android:layout_below="@id/style_name"
            android:id="@+id/trim"
            android:text="TRIM  :"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="100sp"
            android:layout_height="100sp" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="100sp"
               android:id="@+id/trim_content"
               android:layout_below="@id/style_name"
               android:layout_toRightOf="@id/trim"
               android:text="text content"
               android:gravity="center"
               android:textSize="16sp"
               android:textStyle="normal"
               android:textColor="@color/black"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>